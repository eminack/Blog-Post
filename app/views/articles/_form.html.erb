<%= render 'shared/errors',obj:@article %>

<div class = "row">
    <div class = "col-sm-12">
        <%= form_for @article do |f| %>
            <div class="form-group row">
                <div class = "col-sm-2 col-form-label">
                    <%= f.label :title %><br/>
                </div>
                <div class = "col-sm-8 ">
                    <%= f.text_field :title,class: "form-control",placeholder: "Title of article", autofocus: true %>
                </div>
            </div>
            <div class="form-group row">
                <div class = "col-sm-2 col-form-label">
                    <%= f.label :description %><br/>
                </div>
                <div class = "col-sm-8 " >
                    <%= f.text_area :description, class:"form-control",id: "new-article-description",placeholder:"Description of Article",autofocus: true%>
                </div>
            </div>
            <div class="row">
                <div class="offset-2 col-sm-10">
                    <%= f.submit class:"btn btn-primary btn-lg" %>
                </div>
            </div>
        <% end %>
        <div class="offset-4 col-sm-4 ">
            [ <%= link_to "Cancel request & return to articles listing",articles_path %> ]
        </div>
    </div>
</div>